<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Makip" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores principales mejorados -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/text_light</item>
        <item name="colorPrimaryContainer">@color/primary_light</item>
        <item name="colorOnPrimaryContainer">@color/text_primary</item>

        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorOnSecondary">@color/text_light</item>
        <item name="colorSecondaryContainer">@color/accent_light</item>
        <item name="colorOnSecondaryContainer">@color/text_primary</item>

        <!-- Colores de fondo y superficie -->
        <item name="android:colorBackground">@color/background_main</item>
        <item name="colorSurface">@color/background_card</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Barra de estado NEGRA con iconos BLANCOS -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- CRÍTICO: Forzar que el contenido respete las barras del sistema -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fitsSystemWindows">true</item>

        <!-- Barra de navegación -->
        <item name="android:navigationBarColor">@color/background_dark</item>
    </style>

    <style name="Theme.Makip" parent="Base.Theme.Makip" />
</resources>