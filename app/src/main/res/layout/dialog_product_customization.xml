<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_card_rounded">

    <!-- Título del producto -->
    <TextView
        android:id="@+id/text_product_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre del Producto"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/teal_200"
        android:layout_marginBottom="8dp" />

    <!-- Precio del producto -->
    <TextView
        android:id="@+id/text_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$0.00"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp" />

    <!-- Sección para subir imágenes -->
    <LinearLayout
        android:id="@+id/layout_upload_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subir imágenes personalizadas"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_upload_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar Fotos"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_marginBottom="8dp" />

        <!-- Container para mostrar previews de imágenes -->
        <LinearLayout
            android:id="@+id/layout_image_previews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

    <!-- Campo de texto personalizado -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Texto personalizado"
        android:visibility="gone"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Selector de talla -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Talla"
        android:visibility="gone"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <AutoCompleteTextView
            android:id="@+id/auto_complete_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:focusable="false" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Selector de color -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Color"
        android:visibility="gone"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <AutoCompleteTextView
            android:id="@+id/auto_complete_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:focusable="false" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Campo de cantidad -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:hint="Cantidad"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/teal_200"
            android:inputType="number"
            android:text="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Botón agregar al carrito -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_to_cart_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar al Carrito"
        android:backgroundTint="@color/teal_700"
        android:textColor="@android:color/white"
        style="@style/Widget.Material3.Button" />

</LinearLayout>
